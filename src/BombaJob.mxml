<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   applicationDPI="160"
			   creationComplete="loading_creationCompleteHandler(event)"
			   splashScreenImage="@Embed('assets/images/splashscreen.png')"
			   splashScreenScaleMode="none"
			   splashScreenMinimumDisplayTime="2000"
			   backgroundColor="#DC8942" xmlns:views="views.*">
	
	<fx:Metadata>
		[ResourceBundle("resources")]
	</fx:Metadata> 

	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			import mx.events.FlexEvent;
			import mx.events.IndexChangedEvent;
			import spark.events.IndexChangeEvent;
			import utilities.AppSettings;
			import views.LoadingView;

			protected function loading_creationCompleteHandler(event:FlexEvent):void {
				this.addEventListener("syncFinished", syncDone);
			}

			public function syncDone(event:Event):void {
				this.removeEventListener("syncFinished", syncDone);
				AppSettings.getInstance().logThis(null, "Starting app...");
				this.tbNewestOffers.label = resourceManager.getString('resources','menu_NewestOffers');
				this.tbJobs.label = resourceManager.getString('resources','menu_Jobs');
				this.tbPeople.label = resourceManager.getString('resources','menu_People');
				this.tbSearch.label = resourceManager.getString('resources','menu_Search');
				this.tbPost.label = resourceManager.getString('resources','menu_Post');
				this.tbSettings.label = resourceManager.getString('resources','menu_Settings');
				this.tbSync.label = resourceManager.getString('resources','menu_Sync');
				this.tbAbout.label = resourceManager.getString('resources','menu_About');
				this.tabApp.visible = true;
				this.tabApp.selectedIndex = 0;
			}
			
			protected function tabApp_changeHandler(event:IndexChangeEvent):void {
				if (event.newIndex == 6) {
					this.tabApp.visible = false;
					this.addEventListener("syncFinished", syncDone);
					this.loadingView.visible = true;
					this.loadingView.startSync();
				}
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<views:LoadingView id="loadingView" width="100%" height="100%" />
	<!-- <s:ViewNavigator id="loadingView" label="Loading" width="100%" height="100%" firstView="views.LoadingView"/> -->

	<s:TabbedViewNavigator id="tabApp" visible="false" width="100%" height="100%" change="tabApp_changeHandler(event)">
		<s:ViewNavigator id="tbNewestOffers" label="Newest Offers" width="100%" height="100%" firstView="views.NewestOffersView"/>
		<s:ViewNavigator id="tbJobs" label="Jobs" width="100%" height="100%" firstView="views.JobsView"/>
		<s:ViewNavigator id="tbPeople" label="People" width="100%" height="100%" firstView="views.PeopleView"/>
		<s:ViewNavigator id="tbSearch" label="Search" width="100%" height="100%" firstView="views.SearchView"/>
		<s:ViewNavigator id="tbPost" label="Post" width="100%" height="100%" firstView="views.PostView"/>
		<s:ViewNavigator id="tbSettings" label="Settings" width="100%" height="100%" firstView="views.SettingsView"/>
		<s:ViewNavigator id="tbSync" label="Sync" width="100%" height="100%" firstView="views.SyncView"/>
		<s:ViewNavigator id="tbAbout" label="About" width="100%" height="100%" firstView="views.AboutView"/>
	</s:TabbedViewNavigator>

</s:Application>